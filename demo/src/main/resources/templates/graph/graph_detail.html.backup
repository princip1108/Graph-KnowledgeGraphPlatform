    // 结束拖动
    function endNodeDrag(event) {
        if (!dragState.isDragging) return;
        
        const nodeId = dragState.nodeId;
        const hasMoved = dragState.hasMoved;
        
        // 标记拖动结束
        dragState.isDragging = false;
        
        // 应用惯性（可选的轻微惯性效果）
        if (hasMoved) {
            const inertiaFactor = 0.3;
            dragState.targetX += dragState.velocity.x * inertiaFactor;
            dragState.targetY += dragState.velocity.y * inertiaFactor;
            
            // 确保惯性后仍在边界内
            const canvas = document.getElementById(&#39;graphCanvas&#39;);
            const width = canvas?.clientWidth || 800;
            const height = canvas?.clientHeight || 600;
            dragState.targetX = Math.max(DRAG_CONFIG.padding, Math.min(width - DRAG_CONFIG.padding, dragState.targetX));
            dragState.targetY = Math.max(DRAG_CONFIG.padding, Math.min(height - DRAG_CONFIG.padding, dragState.targetY));
        }
        
        // 恢复鼠标样式和移除拖动类
        const node = document.querySelector(`[data-node-id="${nodeId}"]`);
        if (node) {
            node.style.cursor = &#39;grab&#39;;
            node.classList.remove(&#39;dragging&#39;);
        }
        
        // 恢复所有元素样式
        setTimeout(() => {
            restoreAllElements();
        }, 150);
        
        // 如果没有移动，触发节点选择
        if (!hasMoved &amp;&amp; nodeId) {
            const nodes = currentGraphData.nodes || [];
            const nodeData = nodes.find(n => n.nodeId === nodeId);
            if (nodeData) {
                selectNode({
                    id: nodeData.nodeId,
                    label: nodeData.name,
                    type: nodeData.type || &#39;default&#39;
                });
            }
        }
        
        // 让动画继续完成剩余的平滑移动
        if (hasMoved &amp;&amp; !dragState.animationId) {
            startSmoothAnimation();
        }
        
        // 延迟重置状态，让惯性动画完成
        setTimeout(() => {
            if (!dragState.isDragging) {
                dragState.nodeId = null;
                dragState.velocity = { x: 0, y: 0 };
            }
        }, 300);
    }

