        })), `度数最高的 ${topN} 个节点`);
    };
    
    // 按重要性(PageRank简化版)查询并高亮节点
    window.queryNodesByImportance = function() {
        const nodes = currentGraphData.nodes || [];
        const edges = currentGraphData.edges || [];
        const topN = parseInt(document.getElementById(&#39;topNRange&#39;)?.value || 5);
        
        // 简化的重要性计算: 度数 + 被引用次数权重
        const inDegreeMap = {};
        const outDegreeMap = {};
        
        nodes.forEach(n =&gt; {
            inDegreeMap[n.nodeId] = 0;
            outDegreeMap[n.nodeId] = 0;
        });
        
        edges.forEach(edge =&gt; {
            if (inDegreeMap[edge.targetNodeId] !== undefined) {
                inDegreeMap[edge.targetNodeId]++;
            }
            if (outDegreeMap[edge.sourceNodeId] !== undefined) {
                outDegreeMap[edge.sourceNodeId]++;
            }
        });
        
        // 重要性 = 入度 * 2 + 出度 (被引用更重要)
        const sortedNodes = nodes.map(n =&gt; ({
            ...n,
            importance: (inDegreeMap[n.nodeId] || 0) * 2 + (outDegreeMap[n.nodeId] || 0)
        })).sort((a, b) =&gt; b.importance - a.importance);
        
        const topNodes = sortedNodes.slice(0, topN);
        highlightQueryResults(topNodes, &#39;importance&#39;);
        showQueryResultPanel(topNodes.map(n =&gt; ({
            id: n.nodeId,
            label: n.name,
            type: n.type,
            metric: `重要性: ${n.importance}`
        })), `重要性最高的 ${topN} 个节点`);
    };
    
    // 查找最短路径
    window.findShortestPath = function() {
        const sourceId = document.getElementById(&#39;pathSourceNode&#39;)?.value;
        const targetId = document.getElementById(&#39;pathTargetNode&#39;)?.value;
        
        if (!sourceId || !targetId) {
            showNotification(&#39;请选择起点和终点节点&#39;, &#39;warning&#39;);
            return;
        }
        
        if (sourceId === targetId) {
            showNotification(&#39;起点和终点不能相同&#39;, &#39;warning&#39;);
            return;
        }
        
        const path = bfsShortestPath(sourceId, targetId);
        if (path.length === 0) {
            showNotification(&#39;未找到连接路径&#39;, &#39;info&#39;);
            return;
        }
        
        highlightPath(path);
        const nodes = currentGraphData.nodes || [];
        const pathNodes = path.map(nodeId =&gt; {
            const node = nodes.find(n =&gt; n.nodeId === nodeId);
            return {
                id: nodeId,
                label: node?.name || &#39;未知&#39;,
                type: node?.type || &#39;未分类&#39;
            };
        });
        showQueryResultPanel(pathNodes, `最短路径 (${path.length} 个节点)`);
    };
    
    // BFS 查找最短路径
    function bfsShortestPath(startId, endId) {
        const edges = currentGraphData.edges || [];
        const adjacencyList = {};
        
        // 构建邻接表
        edges.forEach(edge =&gt; {
            if (!adjacencyList[edge.sourceNodeId]) adjacencyList[edge.sourceNodeId] = [];
            if (!adjacencyList[edge.targetNodeId]) adjacencyList[edge.targetNodeId] = [];
            adjacencyList[edge.sourceNodeId].push(edge.targetNodeId);
            adjacencyList[edge.targetNodeId].push(edge.sourceNodeId); // 无向图
        });
        
        const queue = [[startId]];
        const visited = new Set([startId]);
        
        while (queue.length &gt; 0) {
            const path = queue.shift();
            const node = path[path.length - 1];
            
            if (node === endId) {
                return path;
            }
            
            const neighbors = adjacencyList[node] || [];
            for (const neighbor of neighbors) {
                if (!visited.has(neighbor)) {
                    visited.add(neighbor);
                    queue.push([...path, neighbor]);
                }
            }
        }
        
        return [];
    }
    
    // 查找所有路径 (限制深度)
    window.findAllPaths = function() {
        const sourceId = document.getElementById(&#39;pathSourceNode&#39;)?.value;
        const targetId = document.getElementById(&#39;pathTargetNode&#39;)?.value;
        
        if (!sourceId || !targetId) {
            showNotification(&#39;请选择起点和终点节点&#39;, &#39;warning&#39;);
            return;
        }
        
        if (sourceId === targetId) {
            showNotification(&#39;起点和终点不能相同&#39;, &#39;warning&#39;);
            return;
        }
        
        const allPaths = dfsAllPaths(sourceId, targetId, 5); // 最大深度5
        if (allPaths.length === 0) {
            showNotification(&#39;未找到连接路径&#39;, &#39;info&#39;);
            return;
        }
        
        // 高亮所有路径上的节点
        const allNodesInPaths = new Set();
        allPaths.forEach(path =&gt; path.forEach(nodeId =&gt; allNodesInPaths.add(nodeId)));
        
        const nodes = currentGraphData.nodes || [];
        const resultNodes = Array.from(allNodesInPaths).map(nodeId =&gt; {
            const node = nodes.find(n =&gt; n.nodeId === nodeId);
            return node || { nodeId, name: &#39;未知&#39;, type: &#39;未分类&#39; };
        });
        
        highlightQueryResults(resultNodes, &#39;path&#39;);
        highlightPathEdges(allPaths);
        showQueryResultPanel(resultNodes.map(n =&gt; ({
            id: n.nodeId,
