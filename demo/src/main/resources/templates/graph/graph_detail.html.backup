    // Render graph from real data
    function renderGraphFromData() {
        const canvas = document.getElementById(&#39;graphCanvas&#39;);
        const nodes = currentGraphData.nodes || [];
        const edges = currentGraphData.edges || [];
        
        if (nodes.length === 0) {
            canvas.innerHTML = `
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center">
                        <p class="text-base-content/70">该图谱暂无节点数据</p>
                    </div>
                </div>
            `;
            return;
        }

        canvas.innerHTML = &#39;&#39;;
        
        // Calculate positions using simple force-directed layout
        const width = canvas.clientWidth || 800;
        const height = canvas.clientHeight || 600;
        const centerX = width / 2;
        const centerY = height / 2;
        
        // Assign positions to nodes
        const nodePositions = {};
        const angleStep = (2 * Math.PI) / nodes.length;
        const radius = Math.min(width, height) / 3;
        
        nodes.forEach((node, index) => {
            const angle = angleStep * index;
            nodePositions[node.nodeId] = {
                x: centerX + radius * Math.cos(angle),
                y: centerY + radius * Math.sin(angle),
                ...node
            };
        });
        
        // Create SVG container
        const svg = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;svg&#39;);
        svg.setAttribute(&#39;width&#39;, &#39;100%&#39;);
        svg.setAttribute(&#39;height&#39;, &#39;100%&#39;);
        svg.style.position = &#39;absolute&#39;;
        svg.style.top = &#39;0&#39;;
        svg.style.left = &#39;0&#39;;

        // 添加箭头定义
        const defs = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;defs&#39;);
        const marker = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;marker&#39;);
        marker.setAttribute(&#39;id&#39;, &#39;arrowhead&#39;);
        marker.setAttribute(&#39;markerWidth&#39;, &#39;10&#39;);
        marker.setAttribute(&#39;markerHeight&#39;, &#39;7&#39;);
        marker.setAttribute(&#39;refX&#39;, &#39;9&#39;);
        marker.setAttribute(&#39;refY&#39;, &#39;3.5&#39;);
        marker.setAttribute(&#39;orient&#39;, &#39;auto&#39;);
        const polygon = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;polygon&#39;);
        polygon.setAttribute(&#39;points&#39;, &#39;0 0, 10 3.5, 0 7&#39;);
        polygon.setAttribute(&#39;fill&#39;, &#39;#1E3A8A&#39;);
        marker.appendChild(polygon);
        defs.appendChild(marker);
        svg.appendChild(defs);

        // Draw edges first (so nodes appear on top)
        console.log(&#39;Drawing edges:&#39;, edges.length, &#39;edges&#39;);
        console.log(&#39;Node positions keys:&#39;, Object.keys(nodePositions));
        
        let edgesDrawn = 0;
        edges.forEach((edge, index) => {
            console.log(`Edge ${index}:`, edge.sourceNodeId, &#39;->&#39;, edge.targetNodeId);
            const fromNode = nodePositions[edge.sourceNodeId];
            const toNode = nodePositions[edge.targetNodeId];
            
            if (fromNode &amp;&amp; toNode) {
                // 计算边的终点（缩短一点以避免穿过节点圆心）
                const dx = toNode.x - fromNode.x;
                const dy = toNode.y - fromNode.y;
                const dist = Math.sqrt(dx * dx + dy * dy);
                const nodeRadius = 28;
                
                // 调整起点和终点，避免穿过节点
                const startX = fromNode.x + (dx / dist) * nodeRadius;
                const startY = fromNode.y + (dy / dist) * nodeRadius;
                const endX = toNode.x - (dx / dist) * (nodeRadius + 5);
                const endY = toNode.y - (dy / dist) * (nodeRadius + 5);
            
            const line = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;line&#39;);
                line.setAttribute(&#39;x1&#39;, startX);
                line.setAttribute(&#39;y1&#39;, startY);
                line.setAttribute(&#39;x2&#39;, endX);
                line.setAttribute(&#39;y2&#39;, endY);
            line.setAttribute(&#39;class&#39;, &#39;graph-edge&#39;);
                // 内联样式确保边可见
                line.style.stroke = &#39;#1E3A8A&#39;;
                line.style.strokeWidth = &#39;2px&#39;;
                line.style.opacity = &#39;0.7&#39;;
                line.setAttribute(&#39;marker-end&#39;, &#39;url(#arrowhead)&#39;);
                line.setAttribute(&#39;data-edge-type&#39;, edge.type || &#39;关联&#39;);
                line.setAttribute(&#39;data-edge-source&#39;, edge.sourceNodeId);
                line.setAttribute(&#39;data-edge-target&#39;, edge.targetNodeId);
            svg.appendChild(line);
                
                // 添加关系类型标签
                const midX = (fromNode.x + toNode.x) / 2;
                const midY = (fromNode.y + toNode.y) / 2;
                const label = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;text&#39;);
                label.setAttribute(&#39;x&#39;, midX);
                label.setAttribute(&#39;y&#39;, midY - 8);
                label.setAttribute(&#39;text-anchor&#39;, &#39;middle&#39;);
                label.setAttribute(&#39;class&#39;, &#39;edge-label&#39;);
                label.setAttribute(&#39;data-label-source&#39;, edge.sourceNodeId);
                label.setAttribute(&#39;data-label-target&#39;, edge.targetNodeId);
                label.style.fontSize = &#39;11px&#39;;
                label.style.fill = &#39;#1E3A8A&#39;;
                label.style.fontWeight = &#39;500&#39;;
                label.textContent = edge.type || &#39;&#39;;
                svg.appendChild(label);
                
                edgesDrawn++;
            } else {
                console.warn(`Edge ${index}: Could not find nodes - from:`, fromNode, &#39;to:&#39;, toNode);
            }
        });
        console.log(&#39;Edges actually drawn:&#39;, edgesDrawn);

        // Draw nodes
        Object.values(nodePositions).forEach(node => {
            const circle = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;circle&#39;);
            circle.setAttribute(&#39;cx&#39;, node.x);
            circle.setAttribute(&#39;cy&#39;, node.y);
            circle.setAttribute(&#39;r&#39;, 28);
            circle.setAttribute(&#39;class&#39;, &#39;graph-node&#39;);
            circle.setAttribute(&#39;fill&#39;, getNodeColor(node.type || &#39;default&#39;));
            circle.setAttribute(&#39;data-node-id&#39;, node.nodeId);
            circle.setAttribute(&#39;data-node-type&#39;, node.type || &#39;default&#39;);
            circle.style.cursor = &#39;grab&#39;;
            
            // 拖动相关事件
            circle.addEventListener(&#39;mousedown&#39;, (e) => startNodeDrag(e, node.nodeId));
            svg.appendChild(circle);

            // Add text label
            const text = document.createElementNS(&#39;http://www.w3.org/2000/svg&#39;, &#39;text&#39;);
            text.setAttribute(&#39;x&#39;, node.x);
            text.setAttribute(&#39;y&#39;, node.y + 48);
            text.setAttribute(&#39;text-anchor&#39;, &#39;middle&#39;);
            text.setAttribute(&#39;class&#39;, &#39;node-label text-xs fill-current text-base-content font-medium&#39;);
            text.setAttribute(&#39;data-label-for&#39;, node.nodeId);
            text.textContent = node.name || &#39;未命名&#39;;
            svg.appendChild(text);
        });

        // 添加SVG级别的拖动事件监听
        svg.addEventListener(&#39;mousemove&#39;, handleNodeDrag);
        svg.addEventListener(&#39;mouseup&#39;, endNodeDrag);
        svg.addEventListener(&#39;mouseleave&#39;, endNodeDrag);

        canvas.appendChild(svg);
        
        // 保存节点位置到 currentGraphData 以便拖动时更新
        currentGraphData.nodePositions = nodePositions;
    }
    
    // ==================== 节点拖动功能（优化版） ====================
    
    let dragState = {
        isDragging: false,
        nodeId: null,
        startX: 0,
        startY: 0,
        currentX: 0,
        currentY: 0,
        targetX: 0,
        targetY: 0,
        hasMoved: false,
        animationId: null,
        velocity: { x: 0, y: 0 },
        lastTime: 0
    };
    
    const DRAG_CONFIG = {
        smoothing: 0.25,          // 平滑跟随系数 (0-1, 越小越平滑)
        minMoveDistance: 3,       // 最小移动距离才算拖动
        nodeRadius: 28,           // 节点半径
        padding: 40,              // 边界内边距
        connectedHighlight: true  // 是否高亮相连节点
    };
    
    // 开始拖动节点
    function startNodeDrag(event, nodeId) {
        event.preventDefault();
        event.stopPropagation();
        
        const svg = document.querySelector(&#39;#graphCanvas svg&#39;);
        if (!svg) return;
        
        const svgP = getSVGPoint(svg, event.clientX, event.clientY);
        const nodeCircle = document.querySelector(`[data-node-id="${nodeId}"]`);
        if (!nodeCircle) return;
        
        const currentX = parseFloat(nodeCircle.getAttribute(&#39;cx&#39;));
        const currentY = parseFloat(nodeCircle.getAttribute(&#39;cy&#39;));
        
        dragState = {
            isDragging: true,
            nodeId: nodeId,
            startX: svgP.x,
            startY: svgP.y,
            currentX: currentX,
            currentY: currentY,
            targetX: currentX,
            targetY: currentY,
            hasMoved: false,
            animationId: null,
            velocity: { x: 0, y: 0 },
            lastTime: performance.now()
        };
        
        // 添加拖动样式
        nodeCircle.classList.add(&#39;dragging&#39;);
        nodeCircle.style.cursor = &#39;grabbing&#39;;
        
        // 让其他节点变淡，突出当前拖动的节点
        dimOtherElements(nodeId);
        
        // 高亮相连的节点和边
        if (DRAG_CONFIG.connectedHighlight) {
            highlightConnectedElements(nodeId);
        }
        
        // 开始平滑动画
        startSmoothAnimation();
    }
    
    // 获取SVG坐标点
    function getSVGPoint(svg, clientX, clientY) {
        const pt = svg.createSVGPoint();
        pt.x = clientX;
        pt.y = clientY;
        return pt.matrixTransform(svg.getScreenCTM().inverse());
    }
    
    // 处理拖动
    function handleNodeDrag(event) {
        if (!dragState.isDragging || !dragState.nodeId) return;
        
        event.preventDefault();
        
        const svg = document.querySelector(&#39;#graphCanvas svg&#39;);
        if (!svg) return;
        
        const svgP = getSVGPoint(svg, event.clientX, event.clientY);
        const now = performance.now();
        const dt = Math.max(1, now - dragState.lastTime);
        
        // 检查是否有明显移动
        const dx = svgP.x - dragState.startX;
        const dy = svgP.y - dragState.startY;
        if (!dragState.hasMoved &amp;&amp; (Math.abs(dx) > DRAG_CONFIG.minMoveDistance || Math.abs(dy) > DRAG_CONFIG.minMoveDistance)) {
            dragState.hasMoved = true;
        }
        
        if (!dragState.hasMoved) return;
        
        // 获取画布边界
        const canvas = document.getElementById(&#39;graphCanvas&#39;);
        const width = canvas?.clientWidth || 800;
        const height = canvas?.clientHeight || 600;
        
        // 限制在边界内
        const newX = Math.max(DRAG_CONFIG.padding, Math.min(width - DRAG_CONFIG.padding, svgP.x));
        const newY = Math.max(DRAG_CONFIG.padding, Math.min(height - DRAG_CONFIG.padding, svgP.y));
        
        // 计算速度（用于惯性）
        dragState.velocity.x = (newX - dragState.targetX) / dt * 16;
        dragState.velocity.y = (newY - dragState.targetY) / dt * 16;
        
        // 更新目标位置
        dragState.targetX = newX;
        dragState.targetY = newY;
        dragState.lastTime = now;
    }
    
    // 平滑动画循环
    function startSmoothAnimation() {
        function animate() {
            if (!dragState.isDragging &amp;&amp; !dragState.animationId) return;
            
            const nodeId = dragState.nodeId;
            if (!nodeId) {
                dragState.animationId = null;
                return;
            }
            
            // 平滑插值
            const dx = dragState.targetX - dragState.currentX;
            const dy = dragState.targetY - dragState.currentY;
            
            // 如果差距很小就直接到位
            if (Math.abs(dx) &lt; 0.5 &amp;&amp; Math.abs(dy) &lt; 0.5 &amp;&amp; !dragState.isDragging) {
                dragState.currentX = dragState.targetX;
                dragState.currentY = dragState.targetY;
                updateNodePosition(nodeId, dragState.currentX, dragState.currentY);
                dragState.animationId = null;
                return;
            }
            
            // 平滑跟随
            dragState.currentX += dx * DRAG_CONFIG.smoothing;
            dragState.currentY += dy * DRAG_CONFIG.smoothing;
            
            // 更新节点位置
            updateNodePosition(nodeId, dragState.currentX, dragState.currentY);
            
            // 继续动画
            dragState.animationId = requestAnimationFrame(animate);
        }
        
        if (!dragState.animationId) {
            dragState.animationId = requestAnimationFrame(animate);
        }
    }
    
    // 更新节点位置
    function updateNodePosition(nodeId, x, y) {
        const nodeCircle = document.querySelector(`[data-node-id="${nodeId}"]`);
        const nodeLabel = document.querySelector(`[data-label-for="${nodeId}"]`);
        
        if (!nodeCircle) return;
        
        // 更新节点位置
        nodeCircle.setAttribute(&#39;cx&#39;, x);
        nodeCircle.setAttribute(&#39;cy&#39;, y);
        
        // 更新标签位置
        if (nodeLabel) {
            nodeLabel.setAttribute(&#39;x&#39;, x);
            nodeLabel.setAttribute(&#39;y&#39;, y + 48);
        }
        
        // 更新 nodePositions 数据
        if (currentGraphData.nodePositions?.[nodeId]) {
            currentGraphData.nodePositions[nodeId].x = x;
            currentGraphData.nodePositions[nodeId].y = y;
        }
        
        // 更新连接的边
        updateConnectedEdges(nodeId, x, y);
    }
    
    // 更新连接到指定节点的所有边
    function updateConnectedEdges(nodeId, newX, newY) {
        const nodeRadius = DRAG_CONFIG.nodeRadius;
        
        // 以该节点为起点的边
        document.querySelectorAll(`[data-edge-source="${nodeId}"]`).forEach(edge => {
            const targetId = edge.getAttribute(&#39;data-edge-target&#39;);
            const targetNode = document.querySelector(`[data-node-id="${targetId}"]`);
            
            if (targetNode) {
                const targetX = parseFloat(targetNode.getAttribute(&#39;cx&#39;));
                const targetY = parseFloat(targetNode.getAttribute(&#39;cy&#39;));
                updateEdgePosition(edge, newX, newY, targetX, targetY, nodeRadius);
                
                // 更新边标签
                const edgeLabel = document.querySelector(`[data-label-source="${nodeId}"][data-label-target="${targetId}"]`);
                if (edgeLabel) {
                    edgeLabel.setAttribute(&#39;x&#39;, (newX + targetX) / 2);
                    edgeLabel.setAttribute(&#39;y&#39;, (newY + targetY) / 2 - 8);
                }
            }
        });
        
        // 以该节点为终点的边
        document.querySelectorAll(`[data-edge-target="${nodeId}"]`).forEach(edge => {
            const sourceId = edge.getAttribute(&#39;data-edge-source&#39;);
            const sourceNode = document.querySelector(`[data-node-id="${sourceId}"]`);
            
            if (sourceNode) {
                const sourceX = parseFloat(sourceNode.getAttribute(&#39;cx&#39;));
                const sourceY = parseFloat(sourceNode.getAttribute(&#39;cy&#39;));
                updateEdgePosition(edge, sourceX, sourceY, newX, newY, nodeRadius);
                
                // 更新边标签
                const edgeLabel = document.querySelector(`[data-label-source="${sourceId}"][data-label-target="${nodeId}"]`);
                if (edgeLabel) {
                    edgeLabel.setAttribute(&#39;x&#39;, (sourceX + newX) / 2);
                    edgeLabel.setAttribute(&#39;y&#39;, (sourceY + newY) / 2 - 8);
                }
            }
        });
    }
    
    // 更新单条边的位置
    function updateEdgePosition(edge, fromX, fromY, toX, toY, radius) {
        const dx = toX - fromX;
        const dy = toY - fromY;
        const dist = Math.sqrt(dx * dx + dy * dy);
        
        if (dist > 0) {
            const startX = fromX + (dx / dist) * radius;
            const startY = fromY + (dy / dist) * radius;
            const endX = toX - (dx / dist) * (radius + 5);
            const endY = toY - (dy / dist) * (radius + 5);
            
            edge.setAttribute(&#39;x1&#39;, startX);
            edge.setAttribute(&#39;y1&#39;, startY);
            edge.setAttribute(&#39;x2&#39;, endX);
            edge.setAttribute(&#39;y2&#39;, endY);
        }
    }
    
    // 让其他元素变淡
    function dimOtherElements(activeNodeId) {
        document.querySelectorAll(&#39;.graph-node&#39;).forEach(node => {
            if (node.getAttribute(&#39;data-node-id&#39;) !== activeNodeId) {
                node.style.opacity = &#39;0.4&#39;;
                node.style.transition = &#39;opacity 0.2s ease&#39;;
            }
        });
        document.querySelectorAll(&#39;.node-label&#39;).forEach(label => {
            if (label.getAttribute(&#39;data-label-for&#39;) !== activeNodeId) {
                label.style.opacity = &#39;0.3&#39;;
                label.style.transition = &#39;opacity 0.2s ease&#39;;
            }
        });
        document.querySelectorAll(&#39;.graph-edge&#39;).forEach(edge => {
            edge.style.opacity = &#39;0.2&#39;;
            edge.style.transition = &#39;opacity 0.2s ease&#39;;
        });
        document.querySelectorAll(&#39;.edge-label&#39;).forEach(label => {
            label.style.opacity = &#39;0.2&#39;;
            label.style.transition = &#39;opacity 0.2s ease&#39;;
        });
    }
    
    // 高亮相连的元素
    function highlightConnectedElements(nodeId) {
        // 高亮相连的边
        document.querySelectorAll(`[data-edge-source="${nodeId}"], [data-edge-target="${nodeId}"]`).forEach(edge => {
            edge.style.opacity = &#39;1&#39;;
            edge.style.stroke = &#39;#10b981&#39;;
            edge.style.strokeWidth = &#39;3px&#39;;
        });
        
        // 获取相连的节点ID
        const connectedIds = new Set();
        document.querySelectorAll(`[data-edge-source="${nodeId}"]`).forEach(edge => {
            connectedIds.add(edge.getAttribute(&#39;data-edge-target&#39;));
        });
        document.querySelectorAll(`[data-edge-target="${nodeId}"]`).forEach(edge => {
            connectedIds.add(edge.getAttribute(&#39;data-edge-source&#39;));
