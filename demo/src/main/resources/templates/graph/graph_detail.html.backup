            type: n.type,
            metric: `路径数: ${allPaths.length}`
        })), `找到 ${allPaths.length} 条路径`);
    };
    
    // DFS 查找所有路径
    function dfsAllPaths(startId, endId, maxDepth) {
        const edges = currentGraphData.edges || [];
        const adjacencyList = {};
        
        edges.forEach(edge =&gt; {
            if (!adjacencyList[edge.sourceNodeId]) adjacencyList[edge.sourceNodeId] = [];
            if (!adjacencyList[edge.targetNodeId]) adjacencyList[edge.targetNodeId] = [];
            adjacencyList[edge.sourceNodeId].push(edge.targetNodeId);
            adjacencyList[edge.targetNodeId].push(edge.sourceNodeId);
        });
        
        const allPaths = [];
        const visited = new Set();
        
        function dfs(current, path) {
            if (path.length &gt; maxDepth) return;
            if (current === endId) {
                allPaths.push([...path]);
                return;
            }
            
            visited.add(current);
            const neighbors = adjacencyList[current] || [];
            for (const neighbor of neighbors) {
                if (!visited.has(neighbor)) {
                    dfs(neighbor, [...path, neighbor]);
                }
            }
            visited.delete(current);
        }
        
        dfs(startId, [startId]);
        return allPaths.slice(0, 10); // 最多返回10条路径
    }
    
    // 查找连通分量
    window.findConnectedComponents = function() {
        const nodes = currentGraphData.nodes || [];
        const edges = currentGraphData.edges || [];
        
        const adjacencyList = {};
        nodes.forEach(n =&gt; adjacencyList[n.nodeId] = []);
        
        edges.forEach(edge =&gt; {
            if (adjacencyList[edge.sourceNodeId]) {
                adjacencyList[edge.sourceNodeId].push(edge.targetNodeId);
            }
            if (adjacencyList[edge.targetNodeId]) {
                adjacencyList[edge.targetNodeId].push(edge.sourceNodeId);
            }
        });
        
        const visited = new Set();
        const components = [];
        
        function bfs(start) {
            const component = [];
            const queue = [start];
            visited.add(start);
            
            while (queue.length &gt; 0) {
                const node = queue.shift();
                component.push(node);
                
                (adjacencyList[node] || []).forEach(neighbor =&gt; {
                    if (!visited.has(neighbor)) {
                        visited.add(neighbor);
                        queue.push(neighbor);
                    }
                });
            }
            return component;
        }
        
        nodes.forEach(n =&gt; {
            if (!visited.has(n.nodeId)) {
                components.push(bfs(n.nodeId));
            }
        });
        
        // 按大小排序,高亮最大的连通分量
        components.sort((a, b) =&gt; b.length - a.length);
        
        if (components.length === 1) {
            showNotification(&#39;整个图谱是完全连通的&#39;, &#39;success&#39;);
            } else {
            showNotification(`发现 ${components.length} 个连通分量`, &#39;info&#39;);
        }
        
        // 高亮最大连通分量
        const largestComponent = components[0] || [];
        const componentNodes = largestComponent.map(nodeId =&gt; {
            const node = nodes.find(n =&gt; n.nodeId === nodeId);
            return node || { nodeId, name: &#39;未知&#39;, type: &#39;未分类&#39; };
        });
        
        highlightQueryResults(componentNodes, &#39;component&#39;);
        showQueryResultPanel(componentNodes.slice(0, 20).map(n =&gt; ({
            id: n.nodeId,
            label: n.name,
            type: n.type,
            metric: `共 ${largestComponent.length} 节点`
        })), `最大连通分量 (${components.length} 个分量)`);
    };
    
    // 查找核心节点
    window.findCoreNodes = function() {
        const nodes = currentGraphData.nodes || [];
        const degreeMap = calculateNodeDegrees();
        
        // 计算平均度数
        const degrees = Object.values(degreeMap);
        const avgDegree = degrees.reduce((a, b) =&gt; a + b, 0) / degrees.length;
        
        // 核心节点: 度数超过平均值的1.5倍
        const threshold = avgDegree * 1.5;
        const coreNodes = nodes.filter(n =&gt; (degreeMap[n.nodeId] || 0) &gt; threshold)
            .map(n =&gt; ({
                ...n,
                degree: degreeMap[n.nodeId] || 0
            }))
            .sort((a, b) =&gt; b.degree - a.degree);
        
        if (coreNodes.length === 0) {
            showNotification(&#39;未找到明显的核心节点&#39;, &#39;info&#39;);
            return;
        }
        
        highlightQueryResults(coreNodes, &#39;core&#39;);
        showQueryResultPanel(coreNodes.map(n =&gt; ({
            id: n.nodeId,
            label: n.name,
            type: n.type,
            metric: `度数: ${n.degree}`
        })), `核心节点 (阈值: ${threshold.toFixed(1)})`);
    };
    
    // 高亮查询结果节点
    function highlightQueryResults(nodes, queryType) {
        clearAllHighlights();
        
        const colorMap = {
            degree: &#39;#f59e0b&#39;,      // 橙色
            importance: &#39;#8b5cf6&#39;,  // 紫色
            path: &#39;#10b981&#39;,        // 绿色
            component: &#39;#3b82f6&#39;,   // 蓝色
