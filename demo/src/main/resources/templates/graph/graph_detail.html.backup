    // ==================== 查询工具函数 ====================
    
    // 计算节点度数(连接数)
    function calculateNodeDegrees() {
        const edges = currentGraphData.edges || [];
        const nodes = currentGraphData.nodes || [];
        const degreeMap = {};
        
        nodes.forEach(n =&gt; {
            degreeMap[n.nodeId] = 0;
        });
        
        edges.forEach(edge =&gt; {
            if (degreeMap[edge.sourceNodeId] !== undefined) {
                degreeMap[edge.sourceNodeId]++;
            }
            if (degreeMap[edge.targetNodeId] !== undefined) {
                degreeMap[edge.targetNodeId]++;
            }
        });
        
        return degreeMap;
    }
    
    // 按度数查询并高亮节点
    window.queryNodesByDegree = function() {
        const nodes = currentGraphData.nodes || [];
        const topN = parseInt(document.getElementById(&#39;topNRange&#39;)?.value || 5);
        const degreeMap = calculateNodeDegrees();
        
        // 按度数排序
        const sortedNodes = nodes.map(n =&gt; ({
            ...n,
            degree: degreeMap[n.nodeId] || 0
        })).sort((a, b) =&gt; b.degree - a.degree);
        
        const topNodes = sortedNodes.slice(0, topN);
        highlightQueryResults(topNodes, &#39;degree&#39;);
        showQueryResultPanel(topNodes.map(n =&gt; ({
