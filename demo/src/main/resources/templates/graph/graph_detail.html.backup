    // ==================== 视图控制函数 ====================
    
    // 更新节点可见性
    window.updateNodeVisibility = function() {
        const range = document.getElementById(&#39;nodeCountRange&#39;);
        const value = parseInt(range?.value || 200);
        const nodes = currentGraphData.nodes || [];
        const totalNodes = nodes.length;
        
        updateNodeCountLabel();
        
        if (value &gt;= totalNodes) {
            // 显示所有节点
            document.querySelectorAll(&#39;.graph-node&#39;).forEach(n =&gt; n.style.display = &#39;&#39;);
            document.querySelectorAll(&#39;.node-label&#39;).forEach(l =&gt; l.style.display = &#39;&#39;);
            document.querySelectorAll(&#39;.graph-edge&#39;).forEach(e =&gt; e.style.display = &#39;&#39;);
            document.querySelectorAll(&#39;.edge-label&#39;).forEach(l =&gt; l.style.display = &#39;&#39;);
            return;
        }
        
        // 按度数排序，保留前N个重要节点
        const degreeMap = calculateNodeDegrees();
        const sortedNodes = [...nodes].sort((a, b) =&gt; 
            (degreeMap[b.nodeId] || 0) - (degreeMap[a.nodeId] || 0)
        );
        
        const visibleNodeIds = new Set(sortedNodes.slice(0, value).map(n =&gt; n.nodeId));
        
        // 隐藏/显示节点
        document.querySelectorAll(&#39;.graph-node&#39;).forEach(node =&gt; {
            const nodeId = node.getAttribute(&#39;data-node-id&#39;);
            node.style.display = visibleNodeIds.has(nodeId) ? &#39;&#39; : &#39;none&#39;;
        });
        
        document.querySelectorAll(&#39;.node-label&#39;).forEach(label =&gt; {
            const nodeId = label.getAttribute(&#39;data-label-for&#39;);
            label.style.display = visibleNodeIds.has(nodeId) ? &#39;&#39; : &#39;none&#39;;
        });
        
        // 只显示两端节点都可见的边
        document.querySelectorAll(&#39;.graph-edge&#39;).forEach(edge =&gt; {
            const source = edge.getAttribute(&#39;data-edge-source&#39;);
            const target = edge.getAttribute(&#39;data-edge-target&#39;);
            edge.style.display = (visibleNodeIds.has(source) &amp;&amp; visibleNodeIds.has(target)) ? &#39;&#39; : &#39;none&#39;;
        });
        
        document.querySelectorAll(&#39;.edge-label&#39;).forEach(label =&gt; {
            const source = label.getAttribute(&#39;data-label-source&#39;);
            const target = label.getAttribute(&#39;data-label-target&#39;);
            label.style.display = (visibleNodeIds.has(source) &amp;&amp; visibleNodeIds.has(target)) ? &#39;&#39; : &#39;none&#39;;
        });
    };
    
